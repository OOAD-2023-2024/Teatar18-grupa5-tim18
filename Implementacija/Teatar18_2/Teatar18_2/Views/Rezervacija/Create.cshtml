@model Teatar18_2.Models.Rezervacija

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rezervacija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="KreirajRezervaciju">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="IDIzvedbe" />

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="kupovina" /> @Html.DisplayNameFor(model => model.kupovina)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="brojKarata" class="control-label"></label>
                <input asp-for="brojKarata" class="form-control" />
                <span asp-validation-for="brojKarata" class="text-danger"></span>
            </div>
            
            <input type="hidden" asp-for="popust" />

            <input type="hidden" asp-for="aktivna" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
