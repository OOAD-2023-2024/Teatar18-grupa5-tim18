@model Teatar18_2.Models.Rezervacija

@{
    ViewData["Title"] = "Otkazivanje rezervacije";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<h3>Jeste li sigurni da želite otkazati ovu rezervaciju?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID rezervacije
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            Broj karata
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.brojKarata)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Otkaži" class="btn btn-danger my-button" /> |
        <a asp-action="Index" class="my-link">Povratak na listu</a>
    </form>
</div>
