@model Teatar18_2.Models.Izvedba

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<h1>Delete</h1>

<h3>Jeste li sigurni da želite obrisati ovu izvedbu?</h3>
<div>
    <h4>Izvedba</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Vrijeme
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.vrijeme)
        </dd>
        <dt class = "col-sm-2">
            Broj slobodnih karata
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.brojSlobodnihKarata)
        </dd>
        <dt class = "col-sm-2">
            Predstava
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Predstava.naziv)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger my-button" /> |
        <a asp-action="Index" class="my-link">Povratak na listu</a>
    </form>
</div>
