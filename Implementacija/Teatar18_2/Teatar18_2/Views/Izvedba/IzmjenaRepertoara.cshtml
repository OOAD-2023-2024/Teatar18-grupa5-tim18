@model List<Predstava>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Izmjena repertoara</title>
    <style>
        body {
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .form-style {
            width: 80%;
            max-width: 600px;
            margin-left: 20vh auto;
            margin-right: 20vh auto;
            padding: 30px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .form-style label {
                text-align: left; 
            }

            .form-style h4 {
                text-align: left; /* Align header text to the center */
                margin-top: 0; /* Remove default margin */
                color: #333; /* Header text color */
            }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        label {
            display: block;
            font-size: 18px;
            cursor: pointer;
        }

        input[type="checkbox"] {
            margin-right: 10px;
        }

        button[type="submit"] {
            background-color: #a10000;
            color: white;
            border: none;
            padding: 12px 24px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #850000;
            }

        label {
            margin-bottom: 8px; 
        }

        button[type="submit"] {
            margin-top: 20px; 
            width: 70%; 
        }

    </style>
</head>
<body>
    <center><form class="form-style" method="post" asp-action="izmjenaRepertoara" asp-controller="Izvedba">
        <h4>Odaberite predstave za novi repertoar:</h4>
            <div>&nbsp;</div>
        <ul>
            @foreach (var predstava in ViewBag.Predstava)
            {
                <li>
                    <label>
                        <input type="checkbox" name="odabranePredstaveID" value="@predstava.ID">
                        @predstava.naziv
                    </label>
                </li>
            }
        </ul>
        <button type="submit">Submit</button>
	</form></center>    

    <div><h1>&nbsp;</h1></div>
	<div>&nbsp;</div>
	<div>&nbsp;</div>
	<div>&nbsp;</div>
	<div>&nbsp;</div>
	<div>&nbsp;</div>
	<div>&nbsp;</div>
	<div>&nbsp;</div>
	<div>&nbsp;</div>
</body>
</html>
