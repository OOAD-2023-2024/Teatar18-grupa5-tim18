@model Teatar18_2.Models.Predstava

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<h1>Delete</h1>

<h3>Jeste li sigurni da želite obrisati ovu predstavu?</h3>
<div>
    <h4>Predstava</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.naziv)
        </dd>
        <dt class = "col-sm-2">
            Glumci
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.glumci)
        </dd>
        <dt class = "col-sm-2">
            Žanr
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.zanr)
        </dd>
        <dt class = "col-sm-2">
            Trajanje
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.trajanje)
        </dd>
        <dt class = "col-sm-2">
            U repertoaru
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.uRepertoaru)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger my-button" /> |
        <a asp-action="Index" class="my-link">Povratak na listu</a>
    </form>
</div>
