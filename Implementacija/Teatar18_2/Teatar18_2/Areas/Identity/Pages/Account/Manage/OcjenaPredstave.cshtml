@page "{id:int}"
@model OcjenaPredstaveModel

@{
    ViewData["Title"] = "Ocjena predstave";
    ViewData["ActivePage"] = ManageNavPages.OcjenaPredstave;
}

<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="row">
    <div class="col-md-6">
        <h3>@ViewData["Title"]</h3>
        <partial name="_StatusMessage" for="StatusMessage" />
        <form method="post">
            <input type="hidden" asp-for="ocjenaPredstave.IDPredstave" />

            <div class="rating-container">
                <label asp-for="ocjenaPredstave.ocjena" class="control-label">Ocijeni predstavu od 1 do 5:</label>
                <select asp-for="ocjenaPredstave.ocjena" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <br />
            <div>
                <button type="submit" class="btn btn-primary my-button">Spasi</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
